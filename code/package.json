{
  "name": "web_template",
  "version": "1.0.0",
  "description": "Template e-comerce project with Docker and Node.js",
  "main": "dist/srcs/backend/main.js",
  "scripts": {
    "build": "npx tsc",
    "build:client": "npx tsc -p tsconfig.client.json",
    "build:css": "npx @tailwindcss/cli -i srcs/static/css/input.css -o dist/static/css/style.css",
    "start": "node dist/srcs/backend/main.js",
    "dev": "npm run build && npm run build:client && npm run build:css && npm run start",
    "clean": "rm -rf ./dist ./srcs/backend/data",
    "redev": "npm run clean && npm run dev",
    "test": "vitest run",
    "retest": "npm run clean ; vitest --reporter=verbose",
    "test:watch": "vitest"
  },
  "keywords": [],
  "author": "yzaoui",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.4.0",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/static": "^8.0.0",
    "@fastify/view": "^10.0.0",
    "bcrypt": "^6.0.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.0.0",
    "ejs": "^3.1.10",
    "fastify": "^5.0.0",
    "jsonwebtoken": "^9.0.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.2.0",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/ejs": "^3.1.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.0.0",
    "@vitest/coverage-c8": "^0.33.0",
    "better-sqlite3": "^12.6.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.0.0"
  }
}
